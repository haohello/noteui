{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}